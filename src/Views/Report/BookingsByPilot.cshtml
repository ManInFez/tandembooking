@model List<TandemBooking.Controllers.BookingsByPilotViewModel>
@{
    ViewData["Title"] = $"Flights per pilot {DateTime.Now.Year}";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>Pilot</th>
        <th>Flights</th>
        <th></th>
    </tr>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.PilotName</td>
            <td>@row.Flights</td>
        </tr>
    }
    <tr>
        <th>Total</th>
        <th>@Model.Sum(row => row.Flights)</th>
    </tr>
</table>