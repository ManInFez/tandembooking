@using System.Security.Claims
@using TandemBooking.Services

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @if (User.IsAdmin())
            {
                <li><a asp-controller="UserAdmin" asp-action="Index">Pilots</a></li>
            }
            @if (User.IsPilot())
            {
                <li><a asp-controller="PilotAvailability" asp-action="Index">Availability</a></li>
            }
            @if (User.IsPilot() || User.IsAdmin())
            {
                <li><a asp-controller="BookingAdmin" asp-action="Index">Bookings</a></li>
            }
            <li>
                <a asp-controller="Manage" asp-action="Index" title="Manage">@User.GetUserName()</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
