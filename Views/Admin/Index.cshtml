@model List<ApplicationUser>

@{
    ViewData["Title"] = "Rediger Brukere";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <tr>
        <th>Navn</th>
        <th>Epost</th>
        <th>Telefon</th>
        <th>Tandempilot</th>
        <th>Admin</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@(user.IsPilot ? "Ja" : "Nei")</td>
            <td>@(user.IsAdmin ? "Ja" : "Nei")</td>
            <td><a href="@Url.Action("EditUser", new { id = user.Id })" class="btn btn-default">Rediger</a></td>
        </tr>
    }
</table>